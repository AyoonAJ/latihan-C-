// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    // ua akan membaut program untuk mencari nilai maksimal array
    int array[] = {5, 3, 8, 2, 9, 1, 6};
    int max = array[0];
    
    // menampilkan output dari nilai max yaitu 5
    cout << "nilai max saat ini adalah " << max << endl << endl;
    for (int i = 1; i < 7; ++i) {
        if (array[i] > max) {
            // ketika nilai array[i] > max, maka velue max berubah yg awal nya 5 menjadi velue > 5
            max = array[i];
        }
    }

    // cetak velue max
    cout << "Nilai maksimum dalam array adalah: " << max << endl;

    return 0;
}
