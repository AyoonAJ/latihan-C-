#include <iostream>
using namespace std;

int main() {
    int numbers[] = {2, 5, 1, 10, 9};
    int total_genap, total_ganjil = 0;
    

    // total penjmlahan bilangan genap
    for(int i = 0; i < 5; i++) {
        if(numbers[i] % 2 == 0) {
            total_genap += numbers[i];
        }
    }
    cout <<"Total penjumlahah array bil genap: " <<total_genap<< endl;
    
    // total pejumlahan bilangan ganjil
    for(int a = 0; a < 5; a++) {
        if(numbers[a] % 2 != 0) {
            total_ganjil += numbers[a];
        }
    }
    cout <<"Total penjumlahah array bil ganjil: " <<total_ganjil<< endl;

    return 0;
}
