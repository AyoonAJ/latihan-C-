#include <iostream>
using namespace std;

int main() {
    int numbers[] = {2, 5, 8, 10, 15};
    int evenCount = 0;

    for(int i = 0; i < 5; i++) {
        if(numbers[i] % 2 == 0) {
            evenCount++;
        }
    }

    cout << "Jumlah bilangan genap dalam array: " << evenCount << endl;

    return 0;
}
