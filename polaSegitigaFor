#include <iostream>
using namespace std;

int main() {
    // gue mau membuat pola segitiga denga perulangan
    
    int tinggi;
    cout << "masukkan tinggi segitiga: "; cin >> tinggi;

    // bagian perulangan atau prosesnya dan gue ga boleh lupa akan ini
    for(int i = 1; i <= tinggi; i++){
        for(int j = 1; j <= i; j++){
            cout << "*";
        }
        cout << endl;
    }
   

    return 0;
}
